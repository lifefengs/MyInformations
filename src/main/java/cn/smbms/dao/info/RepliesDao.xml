<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.smbms.dao.info.RepliesDao">
	
	<!-- /**根据info的id查询全部的回复信息
	 * @param infoId
	 * @return
	 */
	List<Replies> findAllByInfoId(@Param("infoId")Long infoId); -->
	<select id="findAllByInfoId" resultType="Replies">
		select * from replies where infoId = #{infoId}
	</select>
	
	
	<!-- /**保存回复信息
	 * @param replies
	 */
	void saveReply(Replies replies); -->
	<insert id="saveReply" parameterType="Replies">
		insert into
			replies
		(content,replyTime,infoId)
		values
		(#{content},now(),#{infoId})
	</insert>
	
	
</mapper>